$('main').on('input', 'input[mode=numeric]', function (event) {
  var regex = $(event.target).attr('min') >= 0 ? /^[0-9]*\.?[0-9]{0,2}/ : /^\-{0,1}[0-9]*\.?[0-9]{0,2}/; //regex for matching decimal numbers up to 2 decimals. Allow a minus-sign if the input has min of less than 0;
  event.target.value = event.target.value.replace(',', '.').match(regex);
})
